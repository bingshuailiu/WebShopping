<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>shopping_cart</servlet-name>
        <servlet-class>com.example.WebTest.shopping_cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shopping_cart</servlet-name>
        <url-pattern>/Tomcat/shopping_cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ItemsInformation</servlet-name>
        <servlet-class>com.example.WebTest.ItemsInformation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ItemsInformation</servlet-name>
        <url-pattern>/Tomcat/ItemsInformation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.example.WebTest.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Tomcat/Register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServ</servlet-name>
        <servlet-class>com.example.WebTest.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServ</servlet-name>
        <url-pattern>/Tomcat/LoginServ</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DownServlet</servlet-name>
        <servlet-class>com.example.WebTest.DownServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownServlet</servlet-name>
        <url-pattern>/Tomcat/DownServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.example.WebTest.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/Tomcat/HelloServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DisplayHeader</servlet-name>
        <servlet-class>com.example.WebTest.DisplayHeader</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayHeader</servlet-name>
        <url-pattern>/Tomcat/DisplayHeader</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Refresh</servlet-name>
        <servlet-class>com.example.WebTest.Refresh</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Refresh</servlet-name>
        <url-pattern>/Tomcat/Refresh</url-pattern>
    </servlet-mapping>



</web-app>